 <% content_for :page_title do %>
  <%= plural_resource_name(Spree::Taxonomy) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_taxonomy), new_transit_taxonomy_url, class: "btn-success", icon: 'add.svg', id: 'admin_new_taxonomy_link' %>
<% end if can?(:create, Spree::Taxonomy) %>

<% content_for :table_filter do %>
  <%= render partial: 'filters' %>
<% end %>

<% unless @collection.empty? %>
  <div id="list-taxonomies" data-hook>
    <%= render 'list' %>
  </div>
<% else %>
  <div class="text-center no-objects-found m-5">
    <%= Spree.t(:no_resource_found, resource: plural_resource_name(Spree::Taxonomy)) %>,
    <%= link_to Spree.t(:add_one), new_transit_taxonomy_url if can?(:create, Spree::Taxonomy) %>!
  </div>
<% end %>

<%= render partial: 'spree/admin/shared/index_table_options', locals: { collection: @collection } %>

