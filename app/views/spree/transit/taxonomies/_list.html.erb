<div class="table-responsive border rounded bg-white">
  <table class="table sortable" id='listing_taxonomies' data-hook >
    <thead class="text-muted">
      <tr data-hook="taxonomies_header">
        <th class="no-border handel-head"></th>
        <th><%= Spree.t(:name) %></th>
        <th><%= Spree.t(:kind) %></th>
        <th><%= Spree.t(:created_at) %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody id="sortVert">
      <% @collection.each do |taxonomy| %>
        <tr id="<%= spree_dom_id taxonomy %>" data-hook="taxonomies_row">
          <td class="move-handle">
            <%= svg_icon name: "grip-vertical.svg", width: '18', height: '18' %>
          </td>
          <td><%= taxonomy.name %></td>
          <td>
            <span class="text-capitalize badge badge-primary">
              <%= taxonomy.kind %>
            </span>
          </td>
          <td>
             <%= taxonomy.created_at %>
          </td>
          <td class="actions">
            <span class="d-flex justify-content-end">
              <%= link_to_edit taxonomy, url: edit_transit_taxonomy_url(taxonomy), no_text: true, class: 'edit' if can?(:edit, taxonomy) %>
              <%= link_to_delete taxonomy, no_text: true if can?(:delete, taxonomy) %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
