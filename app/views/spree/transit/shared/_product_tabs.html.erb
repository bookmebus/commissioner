<% content_for :page_title do %>
  <%= page_header_back_button spree.transit_routes_url %>
  <%= @route.name %>
<% end %>
<% content_for(:page_tabs) do %>
  <%= content_tag :li, class: 'nav-item' do %>
    <%= link_to_with_icon 'edit.svg',
      Spree.t(:details),
      spree.edit_transit_route_url(@route.id),
      class: "nav-link #{'active' if current == :details}" %>
  <% end %>
  <%= content_tag :li, class: 'nav-item' do %>
    <%= link_to_with_icon 'adjust.svg',
      Spree.t(:trips),
      spree.transit_route_trips_path(@route.id),
      class: "nav-link #{'active' if current == :trips}" %>
  <% end %>
<% end %>

